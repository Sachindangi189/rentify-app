<% layout('layouts/boilerPlate') %>

  <div class="row mt-3">
    <div class="col-8 offset-3">
  <h3><%= listing.title %></h3>
    </div>

  <div class="card col-6 offset-3 show-card listing-card">
   <img src="<%= listing.image?.url || listing.image %>" class="card-img-top show-img" alt="home_image">

  
    <div class="card-body">
    <p class="card-text">owned by <%= listing.owner.username %></p>
    <p class="card-text"><%= listing.description %></p>
    <p class="card-text">&#8377; <%= listing.price.toLocaleString('en-IN') %></p>
    <p class="card-text"><%= listing.location %></p>
    <p class="card-text"><%= listing.country %></p>
  </div>
  </div>

  <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
  <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit Information</a>

  <form action="/listing/<%= listing._id %>?_method=DELETE" method="post">
    <button type="submit" class="btn btn-dark offset-5">Delete Home</button>
  </form>
  </div>
 <% } %>

 
<!-- rating  section-->
   
   <div class="col-8 offset-3 mb-3">
   <% if(currentUser) {%>
  <h3>Leave a Review </h3>
  <form action="/listing/<%= listing._id %>/review" method="post" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-lable"> Rating</label>
      <input type="range" id="rating" name="Review[rating]" min="1" max="5" class="form-range">
    </div>

    <div class="mb-3 mt-3">
      <label for="comment " class="form-lable">comment</label>
      <textarea class="form-control" id="comment" name="Review[comment]" cols = "30" rows="5" required></textarea>
  </div>
  <button class="btn btn-outline-dark">submit</button>
  </form>
    <% } %>
    <hr/>

 <p><b>All Reviews</b></p>
  <div class="row">
  <% for(let review of listing.reviews) {%>
   <div class="card col-5 ms-3 mb-3">
   <div class="card-body">
    <% if (review.author && review.author.username) { %>
        <h3 class="card-title"><%= review.author.username %></h3>
      <% } else { %>
        <h3 class="card-title text-muted">Unknown User</h3>
      <% } %>
   <p class="card-text"> <%= review.rating %> stars</p>
   <p class="card-text"> <%= review.comment %></p> 
   <form class="mb-3" action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="post">
    <button class="btn btn-sm btn-dark" type="submit">Delete Review</button>
   </form>
  </div>
  </div>
 <%}%>

  </div>
</div>
  </div>
